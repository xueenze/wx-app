.card{
    overflow: hidden;
    position: relative;
    margin: 20rpx;
}

.card::before{
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  background: linear-gradient(to right,rgba(0,0,0,.6) 0,rgba(0,0,0,0) 100%);
}

.card .cover{
    width: 100%;
    border-radius: 8rpx;
    vertical-align: bottom;
}

.card .info{
    color: #fff;
    padding: 0 30rpx;
    position: absolute;
    top:0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: 1;
    box-sizing: border-box;
}

.card .info .h2{
  font-size: 45rpx;
  font-weight: 600;
  line-height: 1.22;
  text-shadow: 2rpx 2rpx rgba(0,0,0,.4);
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  margin-top: 30rpx;
}

.card .detail{
  margin-top: 20rpx;
  padding-left: 18rpx;
  position: relative;
  font-size: 25rpx;
  line-height: 1;
  font-weight: bold;
  text-shadow: 2rpx 4rpx 0px rgba(0,0,0,0.20);
}

.card .detail::before{
  content: '';
  width: 6rpx;
  height: 100%;
  border-right: 1rpx;
  background-color: #4ABDCC;
  position: absolute;
  left: 4rpx;
  top: 0;
}

.card .detail .sub-title{
  display: block;
  margin-top: 10rpx;
}

.card .detail view{
  margin-bottom: 6rpx;
}

.card .detail text{
  margin-right: 20rpx;
}

.card .detail .place{
  font-weight: normal;
  font-size: 16rpx;
}